{
  "manifest_version": 2,
  "name": "Cookie Copier",
  "version": "1.0",
  "description": "A Chrome extension to save and copy cookies.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Copier"
  },
  "permissions": [
    "cookies",
    "storage",
    "clipboardWrite",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
