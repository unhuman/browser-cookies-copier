{
  "manifest_version": 2,
  "name": "Browser Cookie Copier",
  "version": "1.0",
  "description": "A web browser extension to save and copy cookies.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Copier"
  },
  "icons": {
    "48": "icons/cookies-48.png"
  },
  "permissions": [
    "cookies",
    "clipboardWrite",
    "tabs",
    "<all_urls>"
  ]
}
